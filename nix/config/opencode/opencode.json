        },
        "cli_gemini-3-pro-low": {
          "id": "gemini_cli/gemini-3-pro-preview",
          "name": "CLI Gemini 3 Pro Low",
          "limit": {
            "context": 1048576,
            "output": 64000
          },
          "reasoning": true,
          "options": {
            "reasoningEffort": "low"
          },
          "modalities": {
            "input": ["image", "text"],
            "output": ["text"]
          }
        }
      }
    }
  }
}
