          }
        },
        "claude-sonnet-4-5": {
          "id": "antigravity/claude-sonnet-4-5",
          "name": "Claude Sonnet 4.5",
          "limit": {
            "context": 200000,
            "output": 8000
          },
          "reasoning": false,
          "modalities": {
