{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/gemini-3-pro",
  "small_model": "opencode/gpt-5-nano",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}"
      ],
      "enabled": true
    },
    "svelte": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@sveltejs/mcp"
      ],
      "enabled": true
    }
  }
}
